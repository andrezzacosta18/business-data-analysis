import abc
import io
import numpy as np
from abc import ABC, abstractmethod
from contourpy._contourpy import CoordinateArray as CoordinateArray, FillReturn as FillReturn, FillType as FillType, LineReturn as LineReturn, LineType as LineType
from numpy.typing import ArrayLike as ArrayLike
from typing import Any

class Renderer(ABC, metaclass=abc.ABCMeta):
    """Abstract base class for renderers, defining the interface that they must implement."""
    @abstractmethod
    def filled(self, filled: FillReturn, fill_type: FillType, ax: Any = 0, color: str = 'C0', alpha: float = 0.7) -> None: ...
    @abstractmethod
    def grid(self, x: ArrayLike, y: ArrayLike, ax: Any = 0, color: str = 'black', alpha: float = 0.1, point_color: str | None = None, quad_as_tri_alpha: float = 0) -> None: ...
    @abstractmethod
    def lines(self, lines: LineReturn, line_type: LineType, ax: Any = 0, color: str = 'C0', alpha: float = 1.0, linewidth: float = 1) -> None: ...
    @abstractmethod
    def mask(self, x: ArrayLike, y: ArrayLike, z: ArrayLike | np.ma.MaskedArray[Any, Any], ax: Any = 0, color: str = 'black') -> None: ...
    @abstractmethod
    def save(self, filename: str, transparent: bool = False) -> None: ...
    @abstractmethod
    def save_to_buffer(self) -> io.BytesIO: ...
    @abstractmethod
    def show(self) -> None: ...
    @abstractmethod
    def title(self, title: str, ax: Any = 0, color: str | None = None) -> None: ...
    @abstractmethod
    def z_values(self, x: ArrayLike, y: ArrayLike, z: ArrayLike, ax: Any = 0, color: str = 'green', fmt: str = '.1f', quad_as_tri: bool = False) -> None: ...
