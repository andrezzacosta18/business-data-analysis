from . import Counter as Counter
from .decorator import decorate as decorate
from types import TracebackType
from typing import Any, Callable, Literal, Tuple, Type, TypeVar

F = TypeVar('F', bound=Callable[..., Any])

class ExceptionCounter:
    def __init__(self, counter: Counter, exception: Type[BaseException] | Tuple[Type[BaseException], ...]) -> None: ...
    def __enter__(self) -> None: ...
    def __exit__(self, typ: Type[BaseException] | None, value: BaseException | None, traceback: TracebackType | None) -> Literal[False]: ...
    def __call__(self, f: F) -> F: ...

class InprogressTracker:
    def __init__(self, gauge) -> None: ...
    def __enter__(self) -> None: ...
    def __exit__(self, typ: type[BaseException] | None, value: BaseException | None, traceback: types.TracebackType | None) -> None: ...
    def __call__(self, f: F) -> F: ...

class Timer:
    def __init__(self, metric, callback_name) -> None: ...
    def __enter__(self): ...
    def __exit__(self, typ: type[BaseException] | None, value: BaseException | None, traceback: types.TracebackType | None) -> None: ...
    def labels(self, *args, **kw) -> None: ...
    def __call__(self, f: F) -> F: ...
